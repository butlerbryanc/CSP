@using CSP.Controllers;
@using CSP.Models;
@model CSP.Data.Product

@{
    ViewBag.Title = "Item - " + Model.product_name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.product_name</h2>
<p>
    <img src="~/Images/Products/@Thumbnail.GetProductProfileImage(Model.imagepath)" />
</p>

<div id="product-details">
    <p>
        <em>Price</em>
        @String.Format("$"+"{0:F}", Model.product_price)
    </p>

    <p class="button">
        <a href="@Url.Action("AddToCart", "ShoppingCart", new { id = Model.product_id})">Add to Cart</a>
    </p>
</div>

